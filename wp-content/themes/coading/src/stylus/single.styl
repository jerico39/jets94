base-color = #115740
second-color = #108f62
list-line-color = #e8e8e8

article
    .meta
        margin 5px 0 10px 0
    .meta>.date
        font-size 0.8rem
    img
        max-width 100%
        height auto
        box-sizing: border-box;
        -moz-box-sizing: border-box;
        -webkit-box-sizing: border-box;
        -o-box-sizing: border-box;
        -ms-box-sizing: border-box;
    ul.snsbtn 
        li
            a
                color #000
                margin 0 5px
    h1
        font-size 1.8rem
        font-weight bold
        color #000
        line-height 2rem
        margin 0 0 10px
    h2 
        background-color #000
        color #fff
        font-size 1.6rem
        font-weight 500
        line-height 2rem
        width 100%
        margin 50px 0 20px
        padding 10px
    h3 
        color #000
        font-size 1.5rem
        font-weight 700
        margin 20px 0 10px 2px
        border-left 5px solid second-color 
        padding 5px 3px 5px 10px
    h4 
        font-size 1.5rem
        font-weight 700
        margin 15px 10px 15px 10px
        color #ff0000
    h5
        border-bottom  0 solid 
        border-top  0 solid #ccc 
        font-size  1.6rem 
        font-weight  700 
        background-color  #f5f5f5 
        margin  5px 0 8px 2px 
    h5:first-letter
        color red
        font-size 200%
        text-shadow 2px 3px 5px #666
    p
        font-size 1.0rem
        line-height 1.5rem
        margin-bottom 1.0rem
        letter-spacing .1rem 
    .article-eyecatch
        text-align center
    .article-body
        ul
            padding 1em 1em 1em 2em
            -moz-border-bottom-colors none
            -moz-border-left-colors none
            -moz-border-right-colors none
            -moz-border-top-colors none
            background #f7f7f7
            border-color #757575 #dadada #dadada
            border-image none
            border-style solid
            border-width 1px
            clear both
            color #333
            list-style-position inside
            margin-bottom 2em
            text-align left
        ul
            li:before
                color #fc9705
                content "●"
                position relative
                right 0.1em
        ul.snsbtn
            border-style: none;
            border-width: 0px;
            padding: 0 0 0 20px ;
            -moz-border-bottom-colors: none;
            -moz-border-left-colors: none;
            -moz-border-right-colors: none;
            -moz-border-top-colors: none;
            background: #fff;
            border-color: #fff #fff #fff;
            li:before
                content ""
article.page
    padding-top 30px
       
.single
    .amz
        ul
            display flex
            justify-content center
            li
                img
                    width: 100%;
                    height: 120px;
                    object-fit: cover;
                    object-position: 50% 50%;
                    border: 0;
section.dazn            
    text-align center
    max-width 100%
section.comment 
    .comment-author
        padding 7px
        background-color #f5f5f5
        border 4px solid #eee
    ol.comment-list
        padding 0
        margin-top 0
    li
        border 4px solid #eee
        padding 1em
        margin 0 0 1em
        list-style none
    h3 
        color #000
        font-size 1.5rem
        font-weight 700
        margin 20px 0 10px 2px
        border-left 5px solid second-color 
        padding 5px 3px 5px 10px
    p
        font-size 1.2rem
        //font-weight bold
    textarea
        width 100%
        margin 5px
    input#author
        width 100% 
        margin 10px
    .submit
        padding 6px 12px
        margin-bottom 0
        font-size 14px
        font-weight 400
        line-height 1.42857143
        -ms-touch-action manipulation
        touch-action manipulation
        cursor pointer
        -webkit-user-select none
        -moz-user-select none
        -ms-user-select none
        user-select none
        border 1px solid #2e6da4
        border-radius 4px
        width 200px
        color #fff
        background-color #337ab7
    .input
        border-width 2px


section.pager
    margin 15px 0 10px 0
    text-align: center
    .page-links
        margin-bottom: 5px
    .page-links_t, .page-links_tp
        padding: 7px 17px;
        font-size: 18px;
        border: 1px solid #A6A6A6;
        display: inline-block;
        background: #666;
        color: #FFF;
    a .page-links_t, a .page-links_tp 
        background: #FFF;
        color: #026ccc;
        font-weight: 400;

/*次の記事のリンク*/
section.nextpage
    padding 0px 0px 0px 0px
    margin 10px 0px
    ul 
        padding 0 0px
        display flex
        li
            width 50%
            img
                width 100%
                height: 100px;
                object-fit: cover;
                object-position: 50% 50%;
                border: 0;
        li.next
            margin-left auto
            text-align right


.mokuzi
    border 1px solid #cccccc 
    padding 5px
    box-shadow 0px 2px 3px 0px #dddddd
    ul
        border 0px
        list-style-type square

/*ブログカード*/
.blog-card
    padding 12px
    margin 10px 0
    border 1px solid #ddd
    word-wrap break-word
    max-width 100%
    width 100%
    border-radius 5px

.blog-card-thumbnail
    float left
    padding  5px

.blog-card-content
    margin-left 110px
    line-height 120%

.blog-card-title
    margin-bottom 5px

.blog-card-title a
    font-weight bold
    text-decoration none
    color #111

.blog-card-excerpt
    color #333
    font-size 90%

.blog-card-footer
    font-size 70%
    color #777
    margin-top 5px

.clear
    clear both


/*VS-social-buzz*/
.va-social-buzz
  margin-top  20px

table.csv2table-table
    border 2px solid rgb(153, 153, 153)
