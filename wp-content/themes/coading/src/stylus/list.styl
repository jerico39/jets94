base-color = #115740
second-color = #108f62
list-line-color = #e8e8e8


section.list-search
    span 
        display: inline-block;
        width: 70px;
    div
        margin-left:15px

ul.result-list
    li 
        display flex
        clear both
        font-size 1.0rem
        border-bottom 1px solid list-line-color
        float none
        padding 8px 0
        a.imglink 
            padding 15px 5px 5px 5px
        img 
            width 90px
            height 90px
            border none
            margin 0 5px 0 0
            transition .3s ease-in-out
        .result-link
            .title
                span.date
                    font-size 0.8rem
                p
                    padding 3px
            .date
                i::before
                    margin 3px 
            .meta .fas
                margin 3px
                padding-top 5px
        .youtube-link
            margin-top 10px
    .noresult
        margin 10px
ul.ranking-list
        display flex
.pager-index
    margin 0
    margin 15px 0 10px 0
    text-align: center
    .page-links
        margin-bottom: 5px
    .page-numbers
        padding: 7px 17px;
        font-size: 18px;
        border: 1px solid #A6A6A6;
        display: inline-block;
        background: #666;
        color: #FFF;
    a.page-numbers
        background: #FFF;
        color: #026ccc;
        font-weight: 400;
h1
    margin 0 0 10px 0

.lineup,.lineimg
    position: relative;
    counter-reset: count;
    img
        width 100px
        margin 1px
    li 
        display flex
    .feed
        display block
.lineup
    li::before 
            background-color: #333;
            border-radius: 2px;
            text-align center
            color: #fff;
            counter-increment: count;
            content: counter(count);
            float: left;
            width: 25px;
            height: 25px;
            left: 15px;
            line-height: 25px;
            opacity: .8;
            position: absolute;
            z-index: 1;
.lineimg
    .feed-width
        width 100%
